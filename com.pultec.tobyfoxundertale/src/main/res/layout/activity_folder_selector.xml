<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#070707">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una Carpeta"
        android:textSize="24sp"
        android:textColor="@color/md_theme_dark_primary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Dónde quieres buscar tu archivo?"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/listViewFiles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSelectFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Carpeta"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

</LinearLayout>

